<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_tip_ll_root"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corner"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/dialog_tip_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="#00c827"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialog_tip_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="#868686"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_tip_tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="11dp"
            android:text="取消"
            android:textColor="#ffa722"
            android:textSize="18sp" />

        <View
            android:id="@+id/dialog_tip_v_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/dialog_tip_tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="11dp"
            android:text="确定"
            android:textColor="#00c827"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>