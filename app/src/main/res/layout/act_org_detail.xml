<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg"
    android:orientation="vertical">

    <cc.xuemiao.ui.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_h"
        android:background="@color/head_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.lib_common.widgt.MyWebView
            android:id="@+id/org_detail_wv_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/org_detail_ll_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/org_detail_ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/comment_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common_divider_block_size">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/comment_padding_left"
                    android:paddingRight="@dimen/comment_padding_right"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/org_detail_iv_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/org_detail_tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:textColor="@color/text_dark_gray"
                            android:textSize="@dimen/text_big" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/org_detail_tv_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/text_small" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/org_detail_ll_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/comment_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common_divider_block_size">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/org_detail_ll_courses"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/white_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/comment_padding_left"
                        android:paddingRight="@dimen/comment_padding_right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/course" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="开设课程"
                            android:textColor="@color/text_dark_gray" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/arrow_right_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/org_detail_ll_campaign"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/comment_divider_size"
                        android:background="@drawable/white_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/comment_padding_left"
                        android:paddingRight="@dimen/comment_padding_right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/activity" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="精彩活动"
                            android:textColor="@color/text_dark_gray" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_divider_block_size"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/org_detail_ll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/white_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/comment_padding_left"
                        android:paddingRight="@dimen/comment_padding_right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/phone" />

                        <TextView
                            android:id="@+id/org_detail_tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:textColor="@color/text_dark_gray" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/arrow_right_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/org_detail_ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/comment_divider_size"
                        android:background="@drawable/white_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/comment_padding_left"
                        android:paddingRight="@dimen/comment_padding_right">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/address" />

                        <TextView
                            android:id="@+id/org_detail_tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:textColor="@color/text_dark_gray" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/arrow_right_gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>