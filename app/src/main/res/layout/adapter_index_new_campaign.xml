<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/index_new_campaign_ll_root"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/white_selector"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/index_new_campaign_iv_logo"
            android:layout_width="119dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/index_new_campaign_ll_tags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/index_new_campaign_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/text_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="1dp"
                    android:src="@mipmap/clock" />

                <TextView
                    android:id="@+id/index_new_campaign_tv_time_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>