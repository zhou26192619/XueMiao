<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_captcha_ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_page_bg"
    android:orientation="vertical" >

    <cc.xuemiao.ui.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_h"
        android:background="@color/head_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_margin"
        android:paddingRight="@dimen/login_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp" >

            <EditText
                android:id="@+id/register_captcha_et_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_edit_height"
                android:layout_marginRight="@dimen/login_user_margin"
                android:layout_weight="2.1"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/login_account"
                android:drawablePadding="@dimen/login_edit_padding"
                android:gravity="center_vertical"
                android:hint="手机号码"
                android:inputType="phone"
                android:padding="@dimen/login_edit_padding"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/login_edit_text_size" />

            <TextView
                android:id="@+id/register_captcha_tv_get_captcha"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_bt_login_height"
                android:layout_weight="1.2"
                android:background="@drawable/orange_dark_straight_corner_selector"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/login_bt_login_text_size" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_captcha_et_captcha"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/comment_divider_size"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/captchas"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="验证码"
            android:inputType="number"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/login_edit_text_size" />

        <EditText
            android:id="@+id/register_et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/comment_divider_size"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="密码(6到20个数字或字母)"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/login_edit_text_size" />

        <EditText
            android:id="@+id/register_et_password_comfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/comment_divider_size"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLength="32"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/login_edit_text_size" />

        <TextView
            android:id="@+id/register_captcha_tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_bt_login_height"
            android:layout_marginTop="@dimen/login_edit_bt_vertical_spacing"
            android:background="@drawable/orange_rounded_corner_selector"
            android:gravity="center"
            android:text="注 册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_bt_login_text_size" />
    </LinearLayout>

</LinearLayout>