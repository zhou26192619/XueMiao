<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_bg"
    android:orientation="vertical">

    <cc.xuemiao.ui.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_h"
        android:background="@color/head_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/comment_padding_left"
        android:paddingRight="@dimen/comment_padding_right">

        <TextView
            android:id="@+id/modify_password_tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_account"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:text="用户名"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/modify_password_et_old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/login_edit_vertical_spacing"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="原密码"
            android:inputType="textPassword"
            android:maxLength="32"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/modify_password_et_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/login_edit_vertical_spacing"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="新密码(6到20个数字或字母)"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/modify_password_et_new_password_comfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/login_edit_vertical_spacing"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/login_password"
            android:drawablePadding="@dimen/login_edit_padding"
            android:gravity="center_vertical"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="32"
            android:padding="@dimen/login_edit_padding"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_normal" />

        <TextView
            android:id="@+id/modify_password_tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_bt_login_height"
            android:layout_marginTop="@dimen/login_edit_bt_vertical_spacing"
            android:background="@drawable/login_bt_register_selector"
            android:gravity="center"
            android:text="提 交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/login_bt_login_text_size" />
    </LinearLayout>

</LinearLayout>