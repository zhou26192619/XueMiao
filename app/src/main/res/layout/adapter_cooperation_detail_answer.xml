<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="55dp"
    android:paddingRight="@dimen/comment_padding_right"
    android:paddingTop="2dp">

    <LinearLayout
        android:id="@+id/cooperation_answer_ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@drawable/gray_straight_corner_selector"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_padding_bottom"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="@dimen/common_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cooperation_answer_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/cooperation_answer_tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_light_gray"
                android:textSize="@dimen/text_small_x" />
        </LinearLayout>

        <TextView
            android:id="@+id/cooperation_answer_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cooperation_answer_iv_reply"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/reply"
        android:visibility="gone" />

</RelativeLayout>