<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index_last_info_ll_root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/white_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="6.5dp"
    android:paddingLeft="@dimen/comment_padding_left"
    android:paddingRight="@dimen/comment_padding_right"
    android:paddingTop="6.5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/index_last_info_iv_course_logo"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/course" />

            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/index_last_info_tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#6a6a6a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index_last_info_tv_day"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:background="#ffa726"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:textColor="#fefefe" />

            <TextView
                android:id="@+id/index_last_info_tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="#00c92a"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#fefefe" />

            <TextView
                android:id="@+id/index_last_info_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:src="@mipmap/arrow_right_gray" />

</LinearLayout>