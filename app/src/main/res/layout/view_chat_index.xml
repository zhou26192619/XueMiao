<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:paddingLeft="1.5dp"
    android:paddingRight="1.5dp">

    <LinearLayout
        android:id="@+id/chat_index_ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bottom_bar_normal_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chat_index_tv_conversation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_bottom_bar_normal_bg"
                android:gravity="center"
                android:text="@string/session"
                android:textColor="@color/main_botton_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@mipmap/unread_count_bg"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chat_index_tv_contacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_bottom_bar_normal_bg"
                android:gravity="center"
                android:text="@string/address_book"
                android:textColor="@color/main_botton_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/unread_address_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chat_index_tv_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_bottom_bar_normal_bg"
                android:gravity="center"
                android:text="群组"
                android:textColor="@color/main_botton_text_color"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/chat_index_et_search"
        android:layout_width="match_parent"
        android:focusable="true"
        android:layout_height="50dp" />

    <ListView
        android:id="@+id/chat_index_rl_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#348293"
        android:layout_height="match_parent" />

</LinearLayout>